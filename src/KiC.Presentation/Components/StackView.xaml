<UserControl x:Class="KiC.Presentation.Components.StackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KiC.Presentation.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding OnStackClick}" />
        </StackPanel.InputBindings>
        <Rectangle 
        Height="70"
        Width="50"
        >
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding Path=TopCard.ImageSource}" />
            </Rectangle.Fill>
            <Rectangle.LayoutTransform>
                <RotateTransform Angle="{Binding Angle}" />
            </Rectangle.LayoutTransform>
        </Rectangle>
        <Rectangle 
        Height="70"
        Width="50"
        >
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding Path=BottomCard.ImageSource}" />
            </Rectangle.Fill>
            <Rectangle.LayoutTransform>
                <RotateTransform Angle="{Binding Angle}" />
            </Rectangle.LayoutTransform>
        </Rectangle>
    </StackPanel>
</UserControl>
