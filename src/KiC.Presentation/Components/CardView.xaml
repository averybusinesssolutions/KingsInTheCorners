<UserControl x:Class="KiC.Presentation.Components.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KiC.Presentation.Components" xmlns:viewmodels="clr-namespace:KiC.Presentation.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:CardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle 
        Height="70"
        Width="50"
        >
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding ImageSource}" />
            </Rectangle.Fill>
            <Rectangle.LayoutTransform>
                <RotateTransform Angle="{Binding Angle}" />
            </Rectangle.LayoutTransform>
        </Rectangle>
    </Grid>
</UserControl>
